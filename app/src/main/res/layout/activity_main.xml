<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvShowTrick"
        android:layout_width="320dp"
        android:layout_height="72dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/get_trick"
        android:textColor="@color/teal_200"
        android:textSize="32sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/teal_200" />

    <ImageButton
        android:id="@+id/ibtnShowDifficulty"
        android:layout_marginTop="20dp"
        style="@style/ibtnSettings"
        android:src="@drawable/difficulty" />

    <ImageButton
        android:id="@+id/ibtnShowRotation"
        android:layout_marginTop="5dp"
        style="@style/ibtnSettings"
        android:src="@drawable/rotate" />

    <ImageView
        android:id="@+id/ivSnowboard"
        android:layout_width="100dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:scaleType="centerInside"
        android:src="@drawable/snowboard_skull" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="@string/show_button"
            android:textAllCaps="false" />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/tbtnStance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:checked="false"
        android:textOff="@string/goofy"
        android:textOn="@string/regular" />

</LinearLayout>